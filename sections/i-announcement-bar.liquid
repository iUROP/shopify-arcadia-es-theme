<div class="i-announcement-bar Bg-Colors-100">
  {% for block in section.blocks %}
    <li class="i-announcement-bar__item Text-Colors-200 Typo-Body-S Family-Font---Body">
      {{ block.settings.text }}
      {% if block.settings.show_subscribe %}
        <a href="/products/miel-cruda-de-azahar" class="Text-Colors-200 Typo-Body-S Family-Font---Body">{{ block.settings.subs_text }}</a>
      {% endif %}
    </li>
  {% endfor %}
</div>

{% schema %}
{
  "name": "iUROP Announcement Bar",
  "tag": "section",
  "class": "section",
  "settings": [],
  "blocks": [
    {
      "type": "content_block",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "text",
          "label": "Texto"
        },
        {
          "type": "checkbox",
          "id": "show_subscribe",
          "default": false,
          "label": "Mostrar CTA de suscripción"
        },
        {
          "type": "text",
          "id": "subs_text",
          "label": "Texto de suscripción"
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "iUROP Announcement Bar"
    }
  ]
}
{% endschema %}
