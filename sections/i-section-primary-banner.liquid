  <div class="i-section-primary-hero Bg-Colors-100">
    
    <div class="i-section-primary-hero__overlay"></div>
    <img src="{{ section.settings.banner_image | image_url: width: 1600 }}" alt="Banner Arcadia" class="bg-image" />
  </div>
</div>

