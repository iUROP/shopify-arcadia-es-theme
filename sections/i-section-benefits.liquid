    }
  ],
  "blocks": [
    {
      "type": "content_block",
      "name": "Item",
      "settings": [
        {
          "type": "text",
          "id": "pretitle",
          "label": "Pre titulo"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Titulo"
        },
        {
          "type": "text",
          "id": "content",
          "label": "Contenido"
        },
        {
          "type": "image_picker",
          "id": "icon_1",
          "label": "Icono 1"
        },
        {
          "type": "image_picker",
          "id": "icon_2",
          "label": "Icono 2"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "iUROP section - Benefits",
      "category": "Custom"
    }
  ]
}
{% endschema %}
